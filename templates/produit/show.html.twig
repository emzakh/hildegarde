{% extends 'base.html.twig' %}

{% block title %}Produit : {{ produit.nom }}{% endblock %}

{% block body %}

    <div class="container">

        <div class="d-flex">
            <div class="w-50 ">
                {% if produit.image %}
                    <img src="/uploads/{{ produit.image }}" style="width:100%; object-fit: contain; max-height:300px;">
                {% else %}
                    <img src="http://placehold.it/300x300">
                {% endif %}
            </div>

            <div class="w-50 bg-light d-flex justify-content-center  flex-column">

                 <h1 class="fw-bold">{{ produit.nom }}</h1>

                <div class="d-flex flex-column">
                    <h4 class="fw-bold">Nom Latinus</h4>
                    <p>{{ produit.nomlatin }}</p>
                </div>

                <div class="d-flex flex-column">
                    <h4 class="fw-bold">Catégorie</h4>
                    <p>{{ produit.categorie }}</p>
                </div>

                <div class="d-flex flex-column">
                    <h4 class="fw-bold">Effets</h4>
                    <p>{{ produit.effets }}</p>
                </div>


            </div>
        </div>

        <div class="w-100">
            <p>{{ produit.description }}</p>
            <hr style="width:100%" color="#cbcbcb">
            <p>Recettes associées :</p>
            {% for produit in produit.getRecettesAssociees() %}
                {% set url = path('recette_show', {'slug': produit.getSlug()}) %}
                <a href="{{ url }}" class="btn btn-secondary">{{ produit.getTitre() }}</a>
            {% endfor %}
        </div>



